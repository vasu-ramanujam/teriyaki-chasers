# Database Configuration
# Option 1: SQLite (local development - default)
DATABASE_URL=sqlite:///./animal_explorer.db

# Option 2: AWS RDS PostgreSQL (cloud production)
# Use either DATABASE_URL or the RDS_* variables below
# DATABASE_URL=postgresql+psycopg2://username:password@rds-endpoint:5432/animal_explorer

# RDS Configuration (alternative to DATABASE_URL)
# If these are set, they will override DATABASE_URL
# RDS_HOST=your-rds-endpoint.region.rds.amazonaws.com
# RDS_PORT=5432
# RDS_DATABASE=animal_explorer
# RDS_USERNAME=your_db_username
# RDS_PASSWORD=your_db_password

# Database Connection Pool Settings (for RDS)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

API_BASE_URL=http://127.0.0.1:8000
DIRECTIONS_PROVIDER=mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# AI/ML API Keys
OPENAI_API_KEY=your_openai_api_key_here
INATURALIST_API_KEY=your_inaturalist_api_key_here
BIRDWEATHER_API_KEY=your_birdweather_api_key_here

# AWS S3 Configuration (required for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-2
AWS_S3_BUCKET_NAME=your_bucket_name_here

